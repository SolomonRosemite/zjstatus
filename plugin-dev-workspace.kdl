layout {
    pane split_direction="vertical" {
        pane
    }

    pane size=1 borderless=true {
        plugin location="file:target/wasm32-wasi/debug/zjstatus.wasm" {
            format_left  "{mode} #[fg=#89B4FA,bg=#181825,bold]{session} {tabs}"
            format_right "{datetime}"
            format_space "#[bg=#181825]"

            hide_frame_for_single_pane "true"

            mode_normal  "#[bg=blue] "
            mode_tmux    "#[bg=yellow] "

            tab_normal              "#[fg=#6C7086,bg=#181825] {index} :: {name} "
            tab_normal_fullscreen   "#[fg=#6C7086,bg=#181825] {index} :: {name} [] "
            tab_normal_sync         "#[fg=#6C7086,bg=#181825] {index} :: {name} <> "
            tab_active              "#[fg=#9399B2,bg=#181825,bold,italic] {name} "
            tab_active_fullscreen   "#[fg=#9399B2,bg=#181825,bold,italic] {name} [] "
            tab_active_sync         "#[fg=#9399B2,bg=#181825,bold,italic] {name} <> "


            datetime          "#[fg=#6C7086,bg=#181825,bold] {format} "
            datetime_format   "%A, %d %b %Y %H:%M"
            datetime_timezone "Europe/Berlin"
        }
    }
}
